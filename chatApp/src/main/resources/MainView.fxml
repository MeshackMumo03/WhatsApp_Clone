<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.chatApp.MainController">
    <HBox>
        <!-- Contact List -->
        <VBox fx:id="contactPane" prefWidth="200.0" spacing="10" style="-fx-background-color: #E0E0E0;">
            <Label text="Contacts" style="-fx-font-size: 16px; -fx-padding: 10;"/>
            <ListView fx:id="contactListView" prefHeight="600.0"/>
        </VBox>
        
        <!-- Chat Area -->
        <VBox fx:id="chatPane" prefWidth="600.0" spacing="10" style="-fx-background-color: #FFFFFF;">
            <Label fx:id="chatTitle" text="Chat" style="-fx-font-size: 16px; -fx-padding: 10;"/>
            <TextArea fx:id="chatArea" prefHeight="550.0" editable="false" wrapText="true"/>
            
            <!-- Message Input Area -->
            <HBox spacing="10" style="-fx-padding: 10;">
                <TextField fx:id="messageField" promptText="Type a message" HBox.hgrow="ALWAYS"/>
                <Button text="Send" onAction="#handleSendMessage"/>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
