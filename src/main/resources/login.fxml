<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.Clone.ChatClient.LoginController"
      spacing="15"
      alignment="CENTER"
      style="-fx-background-color: linear-gradient(to bottom, #4CAF50, #087f23); -fx-padding: 30;">

    <!-- App Title -->
    <Label text="Welcome to ChatApp" 
           style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white;"/>

    <!-- Description -->
    <Label text="Enter your username to start chatting!" 
           style="-fx-font-size: 14; -fx-text-fill: #eeeeee;"/>

    <!-- Username Input -->
    <TextField fx:id="usernameField"
               promptText="Username"
               style="-fx-background-radius: 15; -fx-padding: 10; -fx-font-size: 14;"
               maxWidth="250"/>

    <!-- Login Button -->
    <Button fx:id="loginButton"
            text="Login"
            style="-fx-background-color: #ffffff; -fx-text-fill: #4CAF50; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 20;"
            maxWidth="150"/>

</VBox>
